<% was_validated = neighborhood.errors.any? %>

<%= form_with(model: neighborhood, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% n_name_class = "form-control" %>
    <% n_name_was_invalid = neighborhood.errors.include?(:n_name) %>

    <% if was_validated %>
      <% if n_name_was_invalid %>
        <% n_name_class << " is-invalid" %>
      <% else %>
        <% n_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :n_name %>
    <%= f.text_field :n_name, class: n_name_class, placeholder: "Enter n name" %>
    <% if n_name_was_invalid %>
      <% neighborhood.errors.full_messages_for(:n_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
